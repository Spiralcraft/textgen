<project name="spiralcraft-textgen" default="build" basedir=".">


  <target name="build">
    <javac 
      srcdir="source" 
      classpath="${spiralcraft-core.jar}"
      debug="true"
    />
  </target>

  <target name="jar" depends="build">
    <jar 
      destfile="../../lib/spiralcraft-textgen.jar" 
      basedir="source"
      includes="spiralcraft/**/*.class,spiralcraft/**/*.assembly.xml,spiralcraft/**/*.textgen"
      >
      <Manifest>
        <attribute name="Class-Path" value="spiralcraft-core.jar"/>
      </Manifest>
    </jar>
  </target>

</project>
